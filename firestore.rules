rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /users/{userId} {
      allow list: if true;
      allow get: if request.auth != null && getUserData().storeId == resource.data.storeId;
      allow update: if request.auth.uid == userId && request.resource.data.storeId == resource.data.storeId && request.resource.data.role == resource.data.role;
      allow create: if request.auth != null && getUserData().role in ['gerente', 'superadmin'] && request.resource.data.storeId == getUserData().storeId;
      allow delete: if false;
    }

    match /stores/{storeId} {
        allow read: if true; 
        allow write: if false;
    }
    
    match /settings/{storeId} {
      allow read: if request.auth != null && getUserData().storeId == storeId;
      allow write: if request.auth != null && getUserData().storeId == storeId;
    }
    
    match /{collection}/{docId} {
        allow read, write: if request.auth != null && getUserData().storeId == resource.data.storeId;
    }
  }
}