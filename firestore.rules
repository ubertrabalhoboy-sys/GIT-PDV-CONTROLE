rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /users/{userId} {
      allow list: if request.auth != null;
      allow get: if request.auth != null && getUserData().storeId == resource.data.storeId;
      allow update: if request.auth.uid == userId && request.resource.data.storeId == resource.data.storeId && request.resource.data.role == resource.data.role;
      allow create: if request.auth != null && getUserData().role in ['gerente', 'superadmin'] && request.resource.data.storeId == getUserData().storeId;
      allow delete: if false;
    }

    match /stores/{storeId} {
        allow read: if true;
        allow write: if request.auth != null && getUserData().role == 'superadmin';
    }
    
    match /settings/{storeId} {
      allow read: if request.auth != null && getUserData().storeId == storeId;
      allow write: if request.auth != null && getUserData().role in ['gerente', 'superadmin'] && getUserData().storeId == storeId;
    }
    
    match /sales/{saleId} {
      allow read: if request.auth != null && (
                    (getUserData().role == 'vendedor' && resource.data.vendedor == getUserData().name) ||
                    (getUserData().role in ['gerente', 'superadmin'] && getUserData().storeId == resource.data.storeId)
                  );
      allow create: if request.auth != null && request.resource.data.storeId == getUserData().storeId;
      allow update, delete: if false;
    }

    match /products/{productId} {
        allow read: if request.auth != null && getUserData().storeId == resource.data.storeId;
        allow write: if request.auth != null 
                     && getUserData().role in ['gerente', 'superadmin'] 
                     && (request.resource.data.storeId == getUserData().storeId);
    }

    match /clients/{clientId} {
        allow read: if request.auth != null && getUserData().storeId == resource.data.storeId;
        allow write: if request.auth != null 
                     && getUserData().role in ['gerente', 'superadmin'] 
                     && (request.resource.data.storeId == getUserData().storeId);
    }
    
    match /fixedCosts/{costId} {
        allow read: if request.auth != null && getUserData().storeId == resource.data.storeId;
        allow write: if request.auth != null 
                     && getUserData().role in ['gerente', 'superadmin'] 
                     && (request.resource.data.storeId == getUserData().storeId);
    }
  }
}