// firestore.rules

match /stores/{storeId} {
    allow read: if true;
    allow write: if false; // Esta linha proíbe QUALQUER escrita na coleção 'stores'
}

match /settings/{storeId} {
  allow read: if getUserData().storeId == storeId;
  allow write: if false; // Esta linha proíbe QUALQUER escrita na coleção 'settings'
}